<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_check_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_check_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:text="@string/anddialog_dialog_title"
        android:textColor="@color/check_title_color"
        android:textSize="@dimen/sp_17"
        />

    <TextView
        android:id="@+id/tv_check_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/check_message_color"
        android:textSize="@dimen/sp_17"
        tools:text="这里是内容" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#f1f2f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_check_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_check_dialog_left_button"
            android:text="@string/anddialog_cancel"
            android:textColor="@color/check_left_color"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#f1f2f6" />

        <TextView
            android:id="@+id/btn_check_enter"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_check_dialog_right_button"
            android:text="@string/anddialog_enter"
            android:textColor="@color/check_right_color"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>